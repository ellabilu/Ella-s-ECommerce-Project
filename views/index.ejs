  <div class="container">
    <h2>Products</h2>
    <!-- Search and Filter Controls -->
    <div class="row">
      <div class="col-md-4">
        <label for="search">Search for a Product:</label>
        <input type="text" id="searchInput" name="name" placeholder="Search by name..." class="form-control">
      </div>
      <div class="col-md-2">
        <label for="minPrice">Minimum Price:</label>
        <input type="number" id="minPrice" name="minPrice" value="0" class="form-control">
      </div>
      <div class="col-md-2">
        <label for="maxPrice">Maximum Price:</label>
        <input type="number" id="maxPrice" name="maxPrice" value="200" class="form-control">
      </div>
      <div class="col-md-1">
        <br>
        <button class="btn btn-primary btn-block" id="filterButton">Filter</button>
      </div>
      <div class="col-md-1">
        <label for="sortDropdown">Sort By:</label>
        <select class="form-control custom-width" id="sortDropdown">
          <option value="default">Default</option>
          <option value="priceAsc">Price (Low to High)</option>
          <option value="priceDesc">Price (High to Low)</option>
          <option value="stockAsc">Stock (Low to High)</option>
          <option value="stockDesc">Stock (High to Low)</option>
          <option value="nameAsc">Name (A-Z)</option>
          <option value="nameDesc">Name (Z-A)</option>
        </select>
      </div>
      <div class="col-md-2">
        <br>
        <button class="btn btn-primary btn-block narrower-button" id="sortButton">Sort</button>
      </div>
    </div>

    <div class="row" id="productsList">
      <!-- Product cards will be dynamically added here -->
    </div>
